<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.DragonSync" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary color - Deep, tech-inspired blue -->
        <item name="colorPrimary">#4F5CD9</item>
        <!-- Dark variant - Almost midnight blue -->
        <item name="colorPrimaryVariant">#000051</item>
        <!-- Bright accent color for highlights -->
        <item name="colorOnPrimary">#FFFFFF</item>

        <!-- Secondary color - Vibrant, electric teal -->
        <item name="colorSecondary">#00BCD4</item>
        <item name="colorSecondaryVariant">#0088A3</item>
        <item name="colorOnSecondary">#FFFFFF</item>


        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Bottom Navigation specific styling -->
        <item name="bottomNavigationStyle">@style/Widget.MaterialComponents.BottomNavigationView.Colored</item>
    </style>
</resources>