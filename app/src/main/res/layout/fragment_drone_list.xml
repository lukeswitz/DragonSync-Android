<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/surface_dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Drones"
                android:textColor="@color/on_surface_high"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/drone_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="0 detected"
                android:textColor="@color/on_surface_medium"
                android:textSize="14sp" />

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/clear_button"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="80dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:text="Clear"
            android:textColor="@color/accent"
            android:textSize="12sp"
            app:cornerRadius="6dp"
            app:strokeColor="@color/accent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/map_all_button"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:text="Map"
            android:textSize="12sp"
            android:textColor="@color/accent"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:strokeColor="@color/accent"
            app:cornerRadius="6dp"
            app:icon="@android:drawable/ic_dialog_map"
            app:iconSize="16dp"
            app:iconTint="@color/accent"
            android:layout_marginEnd="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/filter_button"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:icon="@drawable/ic_filter_list"
            app:iconTint="@color/accent"
            app:iconSize="24dp" />

    </LinearLayout>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/filter_chips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingBottom="8dp"
        app:singleSelection="false"
        app:chipSpacingHorizontal="8dp">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_all"
            android:tag="all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All"
            android:checkable="true"
            android:checked="true"
            style="@style/Widget.MaterialComponents.Chip.Filter" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_bluetooth"
            android:tag="bluetooth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bluetooth"
            android:checkable="true"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            app:chipIcon="@drawable/ic_bluetooth"
            app:chipIconSize="16dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_wifi"
            android:tag="wifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WiFi"
            android:checkable="true"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            app:chipIcon="@drawable/ic_wifi"
            app:chipIconSize="16dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_sdr"
            android:tag="sdr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SDR"
            android:checkable="true"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            app:chipIcon="@drawable/ic_radio_tower"
            app:chipIconSize="16dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_spoofed"
            android:tag="spoofed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spoofed"
            android:checkable="true"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            app:chipIcon="@android:drawable/ic_dialog_alert"
            app:chipIconSize="16dp" />

    </com.google.android.material.chip.ChipGroup>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/drones_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="8dp"
        android:clipToPadding="false" />

    <LinearLayout
        android:id="@+id/empty_state"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_drone_accent"
            android:tint="@color/on_surface_medium"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No drones detected"
            android:textSize="18sp"
            android:textColor="@color/on_surface_medium"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start scanning to detect nearby drones"
            android:textSize="14sp"
            android:textColor="@color/on_surface_low" />

    </LinearLayout>

</LinearLayout>