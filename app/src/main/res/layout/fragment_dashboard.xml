<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface_dark"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dashboard_title"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/on_surface_high"
            android:layout_marginBottom="24dp" />

        <!-- System Status Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@color/surface_dark_elevated"
            app:strokeColor="@color/card_stroke_light"
            app:strokeWidth="1dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- System Status Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_memory"
                        android:tint="@color/status_green"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/system_status_title"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/on_surface_medium" />

                    <View
                        android:id="@+id/system_status_indicator"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:background="@drawable/circle_status_green" />

                </LinearLayout>

                <!-- Gauges Grid -->
                <GridLayout
                    android:id="@+id/metrics_grid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="3"
                    android:rowCount="1"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Active Drones Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@color/surface_dark_elevated"
            app:strokeColor="@color/card_stroke_light"
            app:strokeWidth="1dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Active Drones Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_drone_accent"
                        android:tint="@color/accent"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/active_drones_title"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/on_surface_medium" />

                    <TextView
                        android:id="@+id/active_drones_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/accent" />

                </LinearLayout>

                <!-- Drone Stats Grid -->
                <GridLayout
                    android:id="@+id/drone_stats_grid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="3"
                    android:rowCount="1"
                    android:layout_marginBottom="16dp" />

                <!-- Recent Drones List -->
                <TextView
                    android:id="@+id/no_drones_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/no_active_drones"
                    android:textColor="@color/on_surface_medium"
                    android:textAlignment="center"
                    android:layout_marginVertical="16dp"
                    android:visibility="visible" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recent_drones_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:visibility="gone" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/view_all_drones"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="32dp"
                    android:layout_marginTop="16dp"
                    android:text="View All Drones"
                    android:textColor="@color/accent"
                    android:textSize="16sp"

                    android:textStyle="bold"
                    app:cornerRadius="24dp"
                    app:icon="@drawable/ic_drone_accent"
                    app:iconGravity="textStart"
                    app:iconTint="@color/accent"
                    app:strokeColor="@color/accent"
                    app:strokeWidth="1dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Security Threats Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@color/surface_dark_elevated"
            app:strokeColor="@color/status_red"
            app:strokeWidth="1dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Security Threats Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_security_alert"
                        android:tint="@color/status_red"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Security Threats"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/on_surface_medium" />

                    <TextView
                        android:id="@+id/Rebels_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/status_red" />

                </LinearLayout>

                <!-- No Threats Message -->
                <TextView
                    android:id="@+id/no_threats_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No security threats detected"
                    android:textColor="@color/on_surface_medium"
                    android:textAlignment="center"
                    android:layout_marginVertical="16dp"
                    android:visibility="visible" />

                <!-- Recent Threats List -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recent_threats_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:visibility="gone" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/view_all_threats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_gravity="center"
                    android:text="View All Threats"
                    android:textColor="@color/status_red"
                    android:textSize="16sp"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    app:strokeColor="@color/status_red"
                    app:icon="@drawable/ic_security_alert"
                    app:iconTint="@color/status_red"
                    app:iconGravity="textStart" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- SDR Status Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@color/surface_dark_elevated"
            app:strokeColor="@color/card_stroke_light"
            app:strokeWidth="1dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- SDR Status Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_radio_tower"
                        android:tint="@color/status_yellow"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/sdr_status_title"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/on_surface_medium" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/sdr_status_chip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="INACTIVE"
                        android:textSize="10sp"
                        style="@style/Widget.MaterialComponents.Chip.Action" />

                </LinearLayout>

                <!-- SDR Temperature Grid -->
                <GridLayout
                    android:id="@+id/sdr_stats_grid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="1" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Warnings Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@color/surface_dark_elevated"
            app:strokeColor="@color/card_stroke_light"
            app:strokeWidth="1dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Warnings Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_warning"
                        android:tint="@color/status_red"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/warnings_title"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/on_surface_medium" />

                    <TextView
                        android:id="@+id/warnings_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/status_red" />

                </LinearLayout>

                <TextView
                    android:id="@+id/warnings_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/no_active_warnings"
                    android:textColor="@color/on_surface_medium"
                    android:textAlignment="center" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/warnings_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:visibility="gone" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>