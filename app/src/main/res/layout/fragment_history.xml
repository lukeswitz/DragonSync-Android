<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/surface_dark">

    <!-- Header with Upload/Clear Actions -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/uploaded_networks_title"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/on_surface_high" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/clear_database_button"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="@string/clear_database"
            android:textSize="12sp"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:cornerRadius="6dp"
            android:layout_marginEnd="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/export_seen"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="@string/export_seen"
            android:textSize="12sp"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:cornerRadius="6dp" />

    </LinearLayout>

    <!-- Welcome Message -->
    <TextView
        android:id="@+id/welcome_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/welcome_user"
        android:textSize="18sp"
        android:textColor="@color/on_surface_medium"
        android:paddingHorizontal="16dp"
        android:layout_marginBottom="16dp" />

    <!-- Device Heartbeats Section -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="@color/surface_dark_elevated"
        app:strokeColor="@color/card_stroke_light"
        app:strokeWidth="1dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/device_heartbeats_title"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/on_surface_high"
                android:layout_marginBottom="12dp" />

            <!-- Heartbeat Table -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/heartbeats_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" />

            <!-- No Heartbeats Message -->
            <TextView
                android:id="@+id/no_heartbeats_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/no_heartbeats"
                android:textColor="@color/on_surface_medium"
                android:textAlignment="center"
                android:visibility="gone" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Statistics Section -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="@color/surface_dark_elevated"
        app:strokeColor="@color/card_stroke_light"
        app:strokeWidth="1dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/statistics_title"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/on_surface_high"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/unique_networks_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/unique_networks_placeholder"
                android:textSize="14sp"
                android:textColor="@color/on_surface_medium"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/total_entries_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/total_entries_placeholder"
                android:textSize="14sp"
                android:textColor="@color/on_surface_medium" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Networks Table -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="@color/surface_dark_elevated"
        app:strokeColor="@color/card_stroke_light"
        app:strokeWidth="1dp"
        app:cardElevation="0dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="horizontal">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Table Header -->
                    <include layout="@layout/networks_table_header" />

                    <!-- Networks RecyclerView -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/networks_table"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </HorizontalScrollView>

        </ScrollView>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>