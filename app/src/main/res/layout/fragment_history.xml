<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/history_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/surface_dark">

    <!-- Header with Actions -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Detection Log"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/on_surface_high" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/clear_database_button"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="Clear All"
            android:textSize="12sp"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:cornerRadius="6dp"
            android:layout_marginEnd="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/export_seen"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="Export"
            android:textSize="12sp"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:cornerRadius="6dp" />

    </LinearLayout>

    <!-- Welcome Message -->
    <TextView
        android:id="@+id/welcome_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Monitoring drone encounters and threat detections"
        android:textSize="16sp"
        android:textColor="@color/on_surface_medium"
        android:paddingHorizontal="16dp"
        android:layout_marginBottom="16dp" />

    <!-- Statistics Section -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="@color/surface_dark_elevated"
        app:strokeColor="@color/card_stroke_light"
        app:strokeWidth="1dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Detection Statistics"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/on_surface_high"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/unique_networks_count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Unique Drones: 0"
                        android:textSize="14sp"
                        android:textColor="@color/on_surface_medium"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/total_entries_count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total Detections: 0"
                        android:textSize="14sp"
                        android:textColor="@color/on_surface_medium" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/Rebel_count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rebel Alerts: 0"
                        android:textSize="14sp"
                        android:textColor="@color/warning_amber"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/last_detection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Last Detection: Never"
                        android:textSize="14sp"
                        android:textColor="@color/on_surface_medium" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Recent Rebel Alerts -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="@color/surface_dark_elevated"
        app:strokeColor="@color/warning_amber"
        app:strokeWidth="1dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Recent Rebel Alerts"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/warning_amber"
                android:layout_marginBottom="12dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/heartbeats_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:maxHeight="200dp" />

            <TextView
                android:id="@+id/no_heartbeats_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No recent Rebel alerts"
                android:textColor="@color/on_surface_medium"
                android:textAlignment="center"
                android:padding="16dp"
                android:visibility="gone" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- All Drone Encounters -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="@color/surface_dark_elevated"
        app:strokeColor="@color/card_stroke_light"
        app:strokeWidth="1dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="All Drone Encounters"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/on_surface_high"
                android:padding="16dp"
                android:paddingBottom="8dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/networks_table"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingHorizontal="8dp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>