<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    android:layout_marginHorizontal="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/surface_dark_elevated"
    app:strokeColor="@color/card_stroke_light"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Row with Detection Type -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <!-- Detection Type Icon -->
            <ImageView
                android:id="@+id/detection_type_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_bluetooth"
                android:tint="@color/accent" />

            <!-- Drone Title -->
            <TextView
                android:id="@+id/drone_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Unknown Drone"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/on_surface_high" />

            <!-- Status Icons -->
            <ImageView
                android:id="@+id/verified_icon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_check_circle"
                android:tint="@color/status_green"
                android:layout_marginEnd="8dp"
                android:visibility="gone"
                android:contentDescription="Verified drone" />

            <ImageView
                android:id="@+id/spoof_warning_icon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_cancel"
                android:tint="@color/status_red"
                android:layout_marginEnd="8dp"
                android:visibility="gone"
                android:contentDescription="Spoofed drone" />

            <ImageView
                android:id="@+id/warning_icon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@android:drawable/ic_dialog_alert"
                android:tint="@color/warning_amber"
                android:visibility="gone"
                android:contentDescription="Warning" />

        </LinearLayout>

        <!-- Drone ID -->
        <TextView
            android:id="@+id/drone_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/on_surface_medium"
            android:layout_marginBottom="4dp"
            android:fontFamily="monospace" />

        <!-- Drone Type -->
        <TextView
            android:id="@+id/drone_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/on_surface_medium"
            android:layout_marginBottom="8dp" />

        <!-- Connection Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/mac_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp"
                android:textColor="@color/on_surface_medium"
                android:fontFamily="monospace" />

            <!-- RSSI Container -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/rssi_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardElevation="0dp"
                app:cardCornerRadius="12dp"
                app:strokeWidth="1dp">

                <TextView
                    android:id="@+id/rssi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:text="-65 dBm" />

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Description -->
        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Drone description"
            android:textColor="@color/on_surface_medium"
            android:textSize="14sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginBottom="8dp"
            android:visibility="gone" />

        <!-- MAC Warning Container -->
        <LinearLayout
            android:id="@+id/mac_warning_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/warning_amber"
            android:padding="8dp"
            android:layout_marginBottom="8dp"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="⚠️ MAC Address Randomization Detected"
                android:textColor="@color/warning_amber"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_marginBottom="4dp" />

            <LinearLayout
                android:id="@+id/mac_list_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

        </LinearLayout>

        <View
            android:id="@+id/mac_warning_separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"
            android:layout_marginVertical="8dp"
            android:visibility="gone" />

        <!-- Stats Grid -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <!-- Position -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Position"
                    android:textSize="12sp"
                    android:textColor="@color/on_surface_medium" />

                <TextView
                    android:id="@+id/position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unknown"
                    android:textSize="11sp"
                    android:textColor="@color/on_surface_high"
                    android:fontFamily="monospace" />

            </LinearLayout>

            <!-- Altitude -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Altitude"
                    android:textSize="12sp"
                    android:textColor="@color/on_surface_medium" />

                <TextView
                    android:id="@+id/altitude"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unknown"
                    android:textSize="11sp"
                    android:textColor="@color/on_surface_high"
                    android:fontFamily="monospace" />

            </LinearLayout>

        </LinearLayout>

        <!-- Second Row -->
        <LinearLayout
            android:id="@+id/pilot_location_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <!-- Speed -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Speed"
                    android:textSize="12sp"
                    android:textColor="@color/on_surface_medium" />

                <TextView
                    android:id="@+id/speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unknown"
                    android:textSize="11sp"
                    android:textColor="@color/on_surface_high"
                    android:fontFamily="monospace" />

            </LinearLayout>

            <!-- Pilot Location -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pilot"
                    android:textSize="12sp"
                    android:textColor="@color/on_surface_medium" />

                <TextView
                    android:id="@+id/pilot_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unknown"
                    android:textSize="11sp"
                    android:textColor="@color/on_surface_high"
                    android:fontFamily="monospace" />

            </LinearLayout>

        </LinearLayout>

        <!-- Third Row -->
        <LinearLayout
            android:id="@+id/manufacturer_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <!-- Manufacturer -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Manufacturer"
                    android:textSize="12sp"
                    android:textColor="@color/on_surface_medium" />

                <TextView
                    android:id="@+id/manufacturer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unknown"
                    android:textSize="11sp"
                    android:textColor="@color/on_surface_high" />

            </LinearLayout>

            <!-- MAC Address Detail -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MAC"
                    android:textSize="12sp"
                    android:textColor="@color/on_surface_medium" />

                <TextView
                    android:id="@+id/mac_address_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unknown"
                    android:textSize="11sp"
                    android:textColor="@color/on_surface_high"
                    android:fontFamily="monospace" />

            </LinearLayout>

        </LinearLayout>

        <!-- Optional Mini Map Container -->
        <FrameLayout
            android:id="@+id/mini_map"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/surface_dark"
            android:layout_marginBottom="12dp"
            android:visibility="gone">

            <com.google.android.gms.maps.MapView
                android:id="@+id/drone_map"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </FrameLayout>

        <!-- Timestamp -->
        <TextView
            android:id="@+id/timestamp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last seen: Unknown"
            android:textSize="12sp"
            android:textColor="@color/on_surface_low"
            android:layout_marginBottom="8dp" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/details_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="36dp"
                android:text="Details"
                android:textSize="12sp"
                app:cornerRadius="6dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:strokeColor="@color/button_stroke"
                android:layout_marginEnd="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/live_map_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="36dp"
                android:text="Live Map"
                android:textSize="12sp"
                app:cornerRadius="6dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:icon="@android:drawable/ic_dialog_map"
                app:iconSize="16dp"
                app:iconGravity="textStart"
                app:strokeColor="@color/accent"
                android:textColor="@color/accent"
                app:iconTint="@color/accent"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>